{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "typings",
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "./lib/*"
  ]
}
  